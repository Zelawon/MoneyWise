<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary">

                <!-- Menu/Navigation Icon -->
                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_24"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:onClick="onMenuIconClick"
                    android:layout_gravity="center_vertical"/>

                <!-- Centered Layout -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <!-- Left Icon Button-->
                    <ImageView
                        android:id="@+id/left_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_left_24"
                        android:enabled="true"
                        android:visibility="visible"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical|center_horizontal"/>

                    <!-- Placeholder Text -->
                    <TextView
                        android:id="@+id/placeholder_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="20dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical|center_horizontal"/>

                    <!-- Right Icon Button-->
                    <ImageView
                        android:id="@+id/right_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right_24"
                        android:enabled="true"
                        android:visibility="visible"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical|center_horizontal"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Fragments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/top_toolbar"
            android:layout_above="@id/line_above_layout">
            <FrameLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame_layout"/>

        </LinearLayout>

        <!-- Line -->
        <View
            android:id="@+id/line_above_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"
            android:layout_above="@id/above_bottom_layout"/>

        <!-- Layout above Bottom Navigation -->
        <RelativeLayout
            android:id="@+id/above_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_navigation">

            <!-- Left Layout -->
            <RelativeLayout
                android:id="@+id/left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/left_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wallet_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <!-- Placeholder Text -->
                <TextView
                    android:id="@+id/left_placeholder_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/green1"
                    android:layout_toEndOf="@id/left_icon"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Right Layout -->
            <RelativeLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_history_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <!-- Placeholder Text -->
                <TextView
                    android:id="@+id/right_placeholder_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/green1"
                    android:layout_toEndOf="@id/right_icon"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_above="@id/line_above_layout"
            android:src="@drawable/ic_plus_24"
            app:backgroundTint="@color/yellow1"
            app:elevation="6dp"
            app:borderWidth="1dp"/>

        <!-- Bottom Navigation View -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/green1"
            app:itemTextColor="@color/white"
            app:itemIconTint="@drawable/bottom_nav_icon_tint"
            app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>
    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>